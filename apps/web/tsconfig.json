{
  "extends": "@my-portfolio/config/tsconfig/react",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@graphql/*": ["graphql/*"],
      "@styles/*": ["styles/*"]
    },
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["src", "vite.config.ts", "vitest.config.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "test",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.e2e.ts",
    "**/*.e2e.tsx",
    "**/*.e2e-spec.ts",
    "**/*.e2e-spec.tsx"
  ]
}
