{
  "name": "@my-portfolio/api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "typecheck": "tsc --noEmit",
    "typeorm": "node --loader ts-node/esm ./node_modules/typeorm/cli.js",
    "dev": "NODE_ENV=development ts-node-dev --project tsconfig.json --respawn --transpile-only src/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "test": "vitest run",
    "lint": "eslint . --ext .ts",
    "gen:gql": "graphql-codegen --config codegen.ts",
    "seed": "node dist/src/db/seed.js",
    "preseed": "pnpm build",
    "seed:ts": "ts-node src/db/seed.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.11.2",
    "@as-integrations/fastify": "^2.1.1",
    "@faker-js/faker": "^9.9.0",
    "@nestjs/apollo": "^13.1.0",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/platform-fastify": "^11.1.6",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "fastify": "^4",
    "graphql": "^16.9.0",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.25",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.7",
    "@types/node": "^20.12.12",
    "@vitest/coverage-v8": "^2.0.5",
    "graphql-config": "^5.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.2",
    "vitest": "^2.0.5"
  }
}