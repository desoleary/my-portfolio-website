{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["DATABASE_URL", "NEXT_PUBLIC_GRAPHQL_URL"],
  "globalDependencies": ["package.json", "pnpm-lock.yaml", "tsconfig.base.json"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": [],
      "outputs": []
    },
    "lint": {
      "outputs": [".eslintcache"]
    },
    "format": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    }
  }
}
